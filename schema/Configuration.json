{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "TwitterAccount": {
            "properties": {
                "basicPassword": {
                    "type": "string"
                },
                "basicUsername": {
                    "type": "string"
                },
                "discordUserId": {
                    "type": "string"
                },
                "emoji": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "basicPassword",
                "basicUsername",
                "discordUserId",
                "emoji",
                "name"
            ],
            "type": "object"
        },
        "TwitterAuth": {
            "properties": {
                "appKey": {
                    "type": "string"
                },
                "appSecret": {
                    "type": "string"
                },
                "callbackUrl": {
                    "type": "string"
                }
            },
            "required": [
                "appKey",
                "appSecret",
                "callbackUrl"
            ],
            "type": "object"
        }
    },
    "properties": {
        "db": {
            "properties": {
                "database": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "type": {
                    "enum": [
                        "mysql"
                    ],
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            },
            "required": [
                "database",
                "host",
                "password",
                "port",
                "type",
                "username"
            ],
            "type": "object"
        },
        "discord": {
            "properties": {
                "token": {
                    "type": "string"
                }
            },
            "required": [
                "token"
            ],
            "type": "object"
        },
        "session": {
            "properties": {
                "isSecure": {
                    "type": "boolean"
                },
                "secret": {
                    "type": "string"
                }
            },
            "required": [
                "secret"
            ],
            "type": "object"
        },
        "twapi": {
            "properties": {
                "baseUrl": {
                    "type": "string"
                },
                "basicPassword": {
                    "type": "string"
                },
                "basicUsername": {
                    "type": "string"
                }
            },
            "required": [
                "baseUrl",
                "basicPassword",
                "basicUsername"
            ],
            "type": "object"
        },
        "twitter": {
            "properties": {
                "accounts": {
                    "items": {
                        "$ref": "#/definitions/TwitterAccount"
                    },
                    "type": "array"
                },
                "auth": {
                    "$ref": "#/definitions/TwitterAuth"
                }
            },
            "required": [
                "accounts",
                "auth"
            ],
            "type": "object"
        }
    },
    "required": [
        "db",
        "discord",
        "twapi",
        "twitter"
    ],
    "type": "object"
}

